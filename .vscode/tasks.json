{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Make check",
			"command": "/usr/bin/make",
			"args": ["check"],
			"options": {
				"cwd": "${workspaceFolder}",
				"environment": [{
					"name": "CFLAGS",
					"value": "-gO0"
				}],
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "Docker check",
			"command": "/usr/local/bin/docker-compose",
			"args": ["up", "--build"],
			"options": {
				"cwd": "${workspaceFolder}/docker",
				"env": {"COMMAND": "/usr/bin/systemf-check"},
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}